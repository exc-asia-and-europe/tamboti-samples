<package xmlns="http://expath.org/ns/pkg" name="${package-name}" abbrev="${project.artifactId}" version="${project.version}"
	spec="1.0">
	<title>${package-title}</title>
	<author id="cteodorescu">Claudius Teodorescu</author>
	<author>Matthias Guth</author>
	<website>${project.url}</website>
	<license>GNU-LGPL</license>
	<copyright>true</copyright>
	<type>${package-type}</type>
	<target>tamboti-${project.artifactId}</target>
	<status>stable</status>
	<prepare>pre-install.xq</prepare>
	<finish>post-install.xq</finish>
	<tag>tamboti-samples</tag>
	<tag>${package-type}</tag>
	<tag>exist</tag>
	<category id="libs">Samples</category>
	<fileSets>
		<fileSet>
			<directory>${basedir}</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>README.md</exclude>
				<exclude>samples-assembly.xml</exclude>
				<exclude>pom.xml</exclude>
				<exclude>target/</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</package>
